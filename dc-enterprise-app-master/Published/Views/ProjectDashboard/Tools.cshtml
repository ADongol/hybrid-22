@model List<PermissionListModel>
@{
    ViewBag.Title = ResourceUI.Tools;
}
@section Page_Styles {
    @Styles.Render("~/Content/css/978", "~/Content/css/tablestyles", "~/Content/css/tabbars", "~/Content/css/adminstyles")
}
@Html.Partial("_ProjectTabsPartial")

<div class="section t-flush b-flush">
    <div class="item-strap">
        <div class="itemname">
           <h1>@ResourceUI.Tools</h1>
            <p></p>
        </div>
        <div class="btn-bar">
            &nbsp;
        </div>
    </div>
</div>
@if (Model.Count == 0)
{
    <div class="section form dark" style="padding-bottom: 0;">
        <p style="margin-top: 8px;">
            There are currently no tools available for download.
            <br/><br/>
        </p>
</div>
}
else
{ 
    foreach (var tool in Model)
    {
                <div class="section form dark" style="padding-bottom: 0;">
                    <a href="/document/Tools/@tool.URL" class="pull-left" style="padding:0; text-decoration: none;">
                        <img src="~/Images/tools_icon.png" style="width: 100px; position: relative; bottom: 12px;" />
                    </a>

                    <div style="margin-left: 115px;">
                        <h3 style="padding-bottom: 0px;"><a href="#" style="padding:0; text-decoration: none;">@tool.Description</a></h3>
                        <p style="margin-top: 8px;">
                            <span>@tool.WebDescription</span>
                            <br />
                            <br />
                            <a style="padding:0;" href="/document/Tools/@tool.URL">Click here to download @tool.Description</a>
                        </p>
                    </div>
                    <div class="clearfix">&nbsp;</div>
                </div>
                <br />
    }
}

